{
  "manifest_version": 2,
  "name": "Laterfeed",
  "description": "Save pages to your Laterfeed instance",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "laterfeed@orellazri",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": ["activeTab", "storage", "http://*/*", "https://*/*"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
